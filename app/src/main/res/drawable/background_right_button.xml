<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGreyTransparent600"/>
            <corners
                android:topRightRadius="@dimen/dim_button_corner"
                android:topLeftRadius="0dp"
                android:bottomRightRadius="@dimen/dim_button_corner"
                android:bottomLeftRadius="0dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGreyTransparent700"/>
            <corners
                android:topRightRadius="@dimen/dim_button_corner"
                android:topLeftRadius="0dp"
                android:bottomRightRadius="@dimen/dim_button_corner"
                android:bottomLeftRadius="0dp"/>
        </shape>
    </item>
</selector>